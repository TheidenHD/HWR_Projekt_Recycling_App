<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theidenhd.hwr_projekt_recycling_app">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera2.full"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/recycling_160925_1280"
        android:label="@string/app_name"
        android:roundIcon="@drawable/recycling_160925_1280"
        android:supportsRtl="true"
        android:theme="@style/Theme.HWR_Projekt_Recycling_App">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Fragebogen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.FRAGEBOGEN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scanner"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.Scanner" />
            </intent-filter>
        </activity>
    </application>

</manifest>